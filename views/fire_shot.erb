<h3> <%= @player1_name %>, Please Choose Which Coordinates You Would Like to Fire Upon: </h3>
<p>Enemy Board Coordinates:</p>
<p><select name="row" form="target_coordinates">
  <% if @grid_size == 12 %>
      <% [*"A".."L"].each do |row| %>
        <option value=<%= row %>><%= row %></option>
      <% end %>
  <% end %>
  <% if @grid_size == 24 %>
      <% [*"A".."X"].each do |row| %>
        <option value=<%= row %>><%= row %></option>
      <% end %>
  <% end %>
  <% if @grid_size == 36 %>
      <% alphabet = "abcdefghijklmnopqrstuvwxyz".upcase.scan(/\w/) %>
      <% alphabet << "AA" << "BB" << "CC" << "DD" << "EE" << "FF" << "GG" << "HH" << "II" << "JJ" %>
      <% [*alphabet].each do |row| %>
        <option value=<%= row %>><%= row %></option>
      <% end %>
  <% end %>
</select>

<select name="column" form="target_coordinates">
  <% if @grid_size == 12 %>
    <% [*1..12].each do |column| %>
      <option value=<%= column %>><%= column %></option>
    <% end %>
  <% end %>
  <% if @grid_size == 24 %>
    <% [*1..24].each do |column| %>
      <option value=<%= column %>><%= column %></option>
    <% end %>
  <% end %>
  <% if @grid_size == 36 %>
    <% [*1..36].each do |column| %>
      <option value=<%= column %>><%= column %></option>  
    <% end %>
  <% end %>
</select></p>


<p><form action='/shot_result' method="post" id="target_coordinates">
 	<button class="button">Fire!</button>
</form></p>